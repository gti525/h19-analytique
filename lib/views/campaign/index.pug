extends ../shared/_layout.pug

block content
    div.page-actions
        a.btn.btn-info(href="/campaign/create", role="button") Créer une campagne

    table.table.table-striped.table-bordered(id="campaignGrid")
        thead
            tr
                th Date de début
                th Date de fin
                th Nombre de bannières
                th.grid-actions Actions
        tbody
            each campaign in campaigns
                tr
                    td= moment(campaign.startDate).format('YYYY-MM-DD')
                    td= moment(campaign.endDate).format('YYYY-MM-DD')
                    td=campaign.banners.length
                    td.grid-actions
                        a(href="/campaign/edit/" + campaign.id)
                            i.fa.fa-edit
                        a(href="/campaign/delete/" + campaign.id)
                            i.fa.fa-trash

block javascript
    script(src="/javascripts/campaign.js")