extends ../shared/_layout.pug

block content
    div.page-actions
        h3 Cr√©er une campagne

    form(method="post", action="/campaign/create")
        div.form-group
            label Nom
            input.form-control(name="name", type="text")
        div.form-group
            label Profile
            select.form-control(name="profile")
                option(selected="") Select a profile
                each profile in profiles
                    option(value=profile.id) #{profile.name}
        button.btn.btn-primary(type="submit") Enregistrer