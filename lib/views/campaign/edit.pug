extends ../shared/_layout.pug

block content
    div.page-actions
        h3 Modifier une campagne

    form(action="/campaign/edit", method="post")
        input.form-control(name="id", type="hidden", value=campaign.id)
        div.form-group
            label Nom
            input.form-control(name="name", type="text", value=campaign.name)
        div.form-group
            label Profile
            select.form-control(name="profile")
                option(selected="") Select a profile
                each profile in profiles
                    option(value=profile.id,selected = campaign.profile.id == profile.id) #{profile.name}
                    
