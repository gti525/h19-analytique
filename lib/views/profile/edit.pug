extends ../shared/_layout.pug

block content
    div.page-actions
        h3 Edit a profile

    form(action="/profile/edit", method="post")
        input.form-control(name="id", type="hidden", value=profile.id)
        div.form-group
            label Name
            input.form-control(name="name", type="text", value=profile.name)
        div.form-group
            label Url
            input.form-control(name="url", type="text", value=profile.url)
        button.btn.btn-primary(type="submit") Update